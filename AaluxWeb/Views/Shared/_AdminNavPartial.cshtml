@model AaluxWeb.Models.TabsViewModel

<div class="navbar navbar-default">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Brand</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Main", "Index", "Admin")</li>
                <li>@Html.ActionLink("Clients", "Index", "Clients")</li>
                <li>
                    <a href="@Url.Action("Index", "Users")">
                        Users
                        @if (@Model.Users.Count() != 0)
                        {
                            <span class="badge"style="background-color:red;">@Model.Users.Count()</span>
                        }
                    </a>
                </li>
                <li>@Html.ActionLink("Class cars", "Index", "ClassCars")</li>
                <li>
                    <a href="@Url.Action("Index", "Orders")">
                        Orders
                        @if (@Model.Orders.Count() != 0)
                        {
                            <span class="badge" style="background-color:red;">@Model.Orders.Count()</span>
                        }
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Drivers")">
                        Drivers
                        @if (@Model.Drivers.Count() != 0)
                        {
                            <span class="badge" style="background-color:red;">@Model.Drivers.Count()</span>
                        }
                    </a>
                </li>
                @if (User.IsInRole("TechAdmin"))
                {
                    <li><a href="@Url.Action("Index", "Payments")">Payments</a></li>
                    <li><a href="@Url.Action("Index", "OrderStatus")">Order Status</a></li>
                }

            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</div>
