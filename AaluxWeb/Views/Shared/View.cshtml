<div class="modal-body" ng-app="myApp" ng-controller="orderCtrl">
    <form name="myForm">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="form-group">
                <div class="col-md-4">
                    <img src="~/Content/Image/a1.png" alt="" class="img-responsive" />
                    <label>
                        <input type="radio" ng-model="order.ClassCar" ng-value="classCars[0]">
                        {{classCars[0].Name}}
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <img src="~/Content/Image/a2.png" alt="" class="img-responsive" />
                    <label>
                        <input type="radio" ng-model="order.ClassCar" ng-value="classCars[1]">
                        {{classCars[1].Name}}
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <img src="~/Content/Image/a3.png" alt="" class="img-responsive" />
                    <label>
                        <input type="radio" ng-model="order.ClassCar" ng-value="classCars[2]">
                        {{classCars[2].Name}}
                    </label>
                    <label>
                        <input type="radio" ng-model="order.ClassCar" ng-value="classCars[3]">
                        {{classCars[3].Name}}
                    </label>
                </div>
            </div>
        </div>
        <tt>ClassCar = {{order.ClassCar | json}}</tt><br />
        <div class="row">
            <div class="col-md-6">
                <input places-auto-complete size=80
                       ng-model="vm.origin"
                       on-place-changed="vm.placeChangedOrigin()" />
            </div>
            <div class="col-md-6">
                <input places-auto-complete size=80
                       ng-model="vm.destination"
                       on-place-changed="vm.placeChangedDestination()" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12">
                <ng-map zoom="14" center="Minsk" map-initialized="mycallback(map)">
                    <directions draggable="false"
                                travel-mode="DRIVING"
                                origin="{{vm.placeOrigin.formatted_address}}"
                                destination="{{vm.placeDestination.formatted_address}}">
                    </directions>
                </ng-map>
                Directions path length:

                {{map.directionsRenderers[0].directions.routes[0].overview_path.length}}
                <p>{{map.directionsRenderers[0].directions.routes[0].legs[0].distance.text}}</p>
                <p>{{((map.directionsRenderers[0].directions.routes[0].legs[0].distance.value * 0.000621371192) * 10) / 10 | number:1}}</p>
            </div>
        </div>
    </form>
</div>
