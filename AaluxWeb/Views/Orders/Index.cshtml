                                <th>
                                    Time post
                                </th>
                                <th>
                                    Date begin
                                </th>
                                <th>
                                    Time begin
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    Payment
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                            @foreach (var orderNew in Model.OrdersNew)
            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(o => orderNew.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(o => orderNew.Client.Name)
                                        @Html.DisplayFor(o => orderNew.Client.Surname)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(o => orderNew.Direction.AddressOrigin)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(o => orderNew.Direction.AddressDestination)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(o => orderNew.ClassCar.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(o => orderNew.OrderStatus.Name)
