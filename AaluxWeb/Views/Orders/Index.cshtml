                                    </td>
                                    <td>
                                        @Html.DisplayFor(o => orderNew.Price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(o => orderNew.Payment.Name)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = orderNew.Id })
