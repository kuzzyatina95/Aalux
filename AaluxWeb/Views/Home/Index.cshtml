        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
            Launch demo modal
        </button>
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="gridSystemModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="gridSystemModalLabel">Modal title</h4>
                    </div>
                    <div class="modal-body">
                        <form name="myForm">
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-md-4">
                                        <img src="~/Content/Image/a1.png" alt="" class="img-responsive" />
                                        <label>
                                            <input type="radio" ng-model="order.ClassCar" ng-value="ClassCar[0]">
                                            {{ClassCar[0].Name}}
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-4">
                                        <img src="~/Content/Image/a2.png" alt="" class="img-responsive" />
                                        <label>
                                            <input type="radio" ng-model="order.ClassCar" ng-value="ClassCar[1]">
                                            {{ClassCar[1].Name}}
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-4">
                                        <img src="~/Content/Image/a3.png" alt="" class="img-responsive" />
                                        <label>
                                            <input type="radio" ng-model="order.ClassCar" ng-value="ClassCar[2]">
                                            {{ClassCar[2].Name}}
                                        </label>
                                        <label>
                                            <input type="radio" ng-model="order.ClassCar" ng-value="ClassCar[3]">
                                            {{ClassCar[3].Name}}
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <tt>ClassCar = {{order.ClassCar | json}}</tt><br />
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="control-label" for="placeOrigin">Origin</label>
                                    <input places-auto-complete size=80
                                           ng-model="vm.origin"
                                           on-place-changed="vm.placeChangedOrigin()"
                                           class="form-control"
                                           id="placeOrigin" />
                                </div>
                                <div class="col-md-6">
                                    <label class="control-label" for="placeDestination">Destination</label>
                                    <input places-auto-complete size=80
                                           ng-model="vm.destination"
                                           on-place-changed="vm.placeChangedDestination()"
                                           class="form-control"
                                           id="placeDestination" />
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-12">
                                    <ng-map zoom="14" center="Minsk">
                                        <directions draggable="false"
                                                    travel-mode="DRIVING"
                                                    origin="{{vm.placeOrigin.formatted_address}}"
                                                    destination="{{vm.placeDestination.formatted_address}}">
                                        </directions>
                                    </ng-map>
                                    <p>{{map.directionsRenderers[0].directions.routes[0].legs[0].distance.text}}</p>
                                    <p>{{((map.directionsRenderers[0].directions.routes[0].legs[0].distance.value * 0.000621371192) * 10) / 10 | number:1}}</p>
                                </div>
                            </div>
                            <div class="row">

                                <div class="col-md-6">
                                    <label class="control-label" for="Name">Name</label>
                                    <input type="text" class="form-control" value="" id="Name" ng-model="order.Client.Name" placeholder="Name" />
                                </div>


                                <div class="col-md-6">
                                    <label class="control-label" for="Surname">Surname</label>
                                    <input type="text" class="form-control" value="" id="Surname" ng-model="order.Client.Surname" placeholder="Surname" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="control-label" for="Email">Email</label>
                                    <input type="email" class="form-control" value="" id="Email" ng-model="order.Client.Email" placeholder="Email" />
                                </div>


                                <div class="col-md-6">
                                    <label class="control-label" for="Phone">Phone</label>
                                    <input type="tel" class="form-control" value="" id="Phone" ng-model="order.Client.Phone" placeholder="Phone" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <img src="~/Content/Image/a1.png" alt="" class="img-responsive" />
                                        <label>
                                            <input type="radio" ng-model="order.PaymentId" ng-value="1">
                                            Credit card
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <img src="~/Content/Image/a1.png" alt="" class="img-responsive" />
                                        <label>
                                            <input type="radio" ng-model="order.PaymentId" ng-value="2">
                                            Cash
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <tt>Order = {{order | json}}</tt><br />
                        </form>
                    </div>
                    <div class="modal-footer">
